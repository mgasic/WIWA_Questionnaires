{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Backend API)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-backend",
            "program": "${workspaceFolder}/src/Backend/Wiwa.Questionnaire.API/bin/Debug/net8.0/Wiwa.Questionnaire.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Backend/Wiwa.Questionnaire.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Chrome Launch (Frontend)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/src/Frontend/wiwa-questionnaire-fe/src",
            "preLaunchTask": "npm-dev"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Backend + Frontend)",
            "configurations": [
                ".NET Core Launch (Backend API)",
                "Chrome Launch (Frontend)"
            ]
        }
    ]
}